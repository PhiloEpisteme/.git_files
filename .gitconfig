[user]
    name = David Johnson
    email = da.johnson.a@gmail.com
[color]
    ui = true
[merge]
    ff = no
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[core]
    excludesfile = ~/.git_files/.gitignore_global
    whitespace = trailing-space,space-before-tab
    autocrlf = input
    editor = vim
[branch]
    autosetupmerge = true
[rerere]
    enabled = true
[advice]
    statusHints = false
# Force the use of spaces
[filter "detab"]
    clean = expand --tabs=4 --initial  # Expand tabs to spaces
    smudge = cat  # Take file back (with spaces)
[push]
    default = simple
[pull]
    rebase = true
